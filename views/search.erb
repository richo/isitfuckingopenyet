<h1>Search screen</h1>
<form class="form-horizontal" method="post">
  <div class="control-group">
    <label class="control-label" for="postcode">Postcode</label>
    <div class="controls">
      <input type="number" name="postcode" placeholder="3000">
    </div>
    <label class="control-label" for="store">Store</label>
    <div class="controls">
      <select name="store">
        <% engines.each do |name, engine| %>
          <option value="<%= name %>"><%= engine.display_name %></option>
        <% end %>
      </select>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <button type="submit" class="btn">Is it fucking open?</button>
    </div>
  </div>
</form>
